      style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
      />

  <TextView
      android:id="@+id/recycler_view_live_ticker_entry_item_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/recycler_view_match_item_team_score_margin_end"
      android:layout_marginStart="@dimen/recycler_view_match_item_team_score_margin_start"
      android:layout_toEndOf="@+id/recycler_view_live_ticker_entry_item_match_time"
